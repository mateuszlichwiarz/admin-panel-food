{% extends 'base.html.twig' %}

{% block title %} SymphFood {% endblock %}

{% block body %}
    <h1>Food</h1>
        {% if foods %}
            <table id="foods" class="table table-striped">
                <thead>
                    <tr>
                        <th>Product:</th>
                    </tr>
                </thead>
                <tbody>
                {% for food in foods %}
                    <tr>
                        <td>{{ food.name }}</td>
                        <td>
                            <a href="/food/{{ food.id }}" class="btn btn-dark">Show</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
{% endblock %}